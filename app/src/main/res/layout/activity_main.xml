<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="loginvm"
            type="com.olacompany.boom.viewmodel.login.LoginViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_default"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@{loginvm.text}"/>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="@drawable/logo_image"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/kakaoLogin_btn"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:onClick="@{()->loginvm.kakaoLoginClick()}"
                android:src="@drawable/btn_kakao_login_setting" />
        </LinearLayout>
    </LinearLayout>
</layout>